@model List<ECommerce.DtoLayer.OrderDtos.OrderOrderingDtos.ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    string tableRowColor = "";
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişim</h4>
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Sipariş Detayları</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Toplam Fiyat</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)

                                    {



                                        count++;

                                        tableRowColor = count switch

                                        {

                                            1 => "table-info",

                                            2 => "table-warning",

                                            3 => "table-danger",

                                            4 => "table-success",

                                            5 => "table-primary",

                                            6 => "table-dark",

                                            7 => "table-secondary",

                                            _ => tableRowColor

                                        };

                                        <tr class="@tableRowColor">

                                            <th>@count</th>

                                            <td>@item.TotalPrice</td>

                                            <td>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td>

                                            <td><a href="#" class="btn btn-warning">Sipariş Detayları</a></td>

                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <!-- partial -->
</div>
