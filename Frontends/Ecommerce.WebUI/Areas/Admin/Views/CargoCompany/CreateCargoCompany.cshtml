@model CreateCargoCompanyDto
@{
    ViewData["Title"] = "CreateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Şirketi Ekleme Sayfası</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form asp-action="CreateCargoCompany" method="post">
                        <label>Şirket Adı</label>
                        <input type="text" class="form-control" asp-for="CargoCompanyName" placeholder="Kargo Şirketinin Adını Giriniz " />
                        <br />
                        <button class="btn btn-success" , type="submit">Şirketi Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
