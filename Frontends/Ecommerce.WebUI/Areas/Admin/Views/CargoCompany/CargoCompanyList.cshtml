@model List<ResultCargoCompanyDto>
@{
    ViewData["Title"] = "CargoCompanyList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Şirketleri </h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kargo Şirketi</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.CargoCompanyName</td>
                                    <td><a href="/Admin/CargoCompany/DeleteCargoCompany/@item.CargoCompanyID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/CargoCompany/UpdateCargoCompany/@item.CargoCompanyID" class="btn btn-primary">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/CargoCompany/CreateCargoCompany/" class="btn btn-success">Yeni Kargo Şirketi Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>

