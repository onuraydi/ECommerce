@model UpdateCargoCompanyDto

@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Şirketi Güncelleme Sayfası</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="CargoCompanyID" />
                        <label>Şirket Adı</label>
                        <input type="text" class="form-control" asp-for="CargoCompanyName" />
                        <br />
                        <button class="btn btn-success">Şirketi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>