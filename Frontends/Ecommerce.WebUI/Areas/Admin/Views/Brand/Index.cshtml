@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Listesi</h4>
                <p>Markalar ile ilgili işlemleri aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Markaya Ait Ürünler</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.BrandName</td>
                                    <td><a href="#" class="btn btn-info">Markaya Ait Ürünler</a></td>
                                    <td><a href="/Admin/Brand/DeleteBrand/@item.BrandId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Brand/UpdateBrand/@item.BrandId" class="btn btn-primary">Güncelle </a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Brand/CreateBrand/" class="btn btn-success">Yeni Marka Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>

