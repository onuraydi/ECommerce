@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Ekleme Sayfası</h4>
                <p>Kategori ile ilgili ekleme işlemlerini aşağıdaki panel üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adını Giriniz " />
                        <br />
                        <label>Kategori Resmi</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Kategorinin Resminin URL'ini giriniz(şimdilik) " />
                        <br />
                        <button class="btn btn-success">Kategoriyi Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

