@model UpdateSpeacialOfferDto
@{
    ViewData["Title"] = "UpdateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Güncelleme Sayfası</h4>
                <p>Özel Teklifler ile ilgili Güncelleme işlemlerini aşağıdaki panel üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="SpecialOfferID" />
                        <label>Özel Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Özel Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" />
                        <br />
                        <label>Özel Teklif Buton Yazısı</label>
                        <input type="text" class="form-control" asp-for="ButtonText" />
                        <br />
                        <label>Özel Teklif Arka Plan Resmi</label>
                        <input type="text" class="form-control" asp-for="ImageURL" />
                        <br />
                        <button class="btn btn-success">Özel Teklifi Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>