@model CreateSpecialOfferDto
@{
    ViewData["Title"] = "CreateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Özel Teklif Ekleme Sayfası</h4>
                <p>Özel Teklifler ile ilgili ekleme işlemlerini aşağıdaki panel üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Özel Teklif Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Özel Teklifin Başlığını Giriniz " />
                        <br />
                        <label>Özel Teklif Alt Başlığı</label>
                        <input type="text" class="form-control" asp-for="SubTitle" placeholder="Özel Teklifin Alt Başlığını Giriniz " />
                        <br />
                        <label>Özel Teklif Buton Yazısı</label>
                        <input type="text" class="form-control" asp-for="ButtonText" placeholder="Özel Teklifin Butonunun Yazısını Giriniz" />
                        <br />
                        <label>Özel Teklif Resmi</label>
                        <input type="text" class="form-control" asp-for="ImageURL" placeholder="Özel Teklifin Arka Plan Resminin URL'sini Giriniz(Şimdilik)"/>
                        <br />
                        <button class="btn btn-success">Özel Teklifi Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>