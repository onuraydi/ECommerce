@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Listesi</h4>
                <p>Ürünler ile ilgili işlemleri aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th> 
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Eski Fiyat</th>
                                <th>Kategori</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Ürün Resimleri</th>
                                <th>Ürün Detayları</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var urun in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@urun.ProductName</td>
                                    <td>@urun.ProductPrice</td>
                                    <td>@urun.ProductOldPrice</td>
                                    <td>@urun.Category.CategoryName</td>
                                    <td><a href="/Admin/Product/DeleteProduct/@urun.ProductID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Product/UpdateProduct/@urun.ProductID" class="btn btn-primary">Güncelle </a></td>
                                    <td><a href="/Admin/ProductImage/ProductImageDetail/@urun.ProductID" class="btn btn-warning">Ürün Resimleri </a></td>
                                    <td><a href="/Admin/ProductDetail/UpdateProductDetail/@urun.ProductID" class="btn btn-info">Ürün Detayları </a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Product/CreateProduct/" class="btn btn-success">Yeni Ürün Girişi</a>
                </div>
            </div>
        </div>
    </div>
</section>